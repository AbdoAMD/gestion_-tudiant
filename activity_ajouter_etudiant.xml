<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#633F51B5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="ID :"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etID"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            android:inputType="number"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:width="1dp"
                android:text="Nom :"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etNom"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:width="1dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Prenom :"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etPrenom"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Note Android :"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etNAnd"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            android:inputType="numberDecimal"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Note Java :"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etNJava"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Note Arduino :"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etNArd"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            android:inputType="numberDecimal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:gravity="center_vertical"
            android:text="@string/note_t_v" />

        <EditText
            android:id="@+id/etNTV"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Note Circuit :"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etNC"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Note Automate :"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etNAUT"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enrestrer"
        android:layout_gravity="center"
        android:onClick="bnEnresterEtud"
        android:backgroundTint="#C4F44336"/>




</LinearLayout>