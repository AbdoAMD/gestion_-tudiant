<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#6A3F51B5"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="ID :" />

        <TextView
            android:id="@+id/tvID"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Nom :" />

        <TextView
            android:id="@+id/tvNom"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Prenom :" />

        <TextView
            android:id="@+id/tvPrenom"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Note Android :" />
        <TextView
            android:id="@+id/tvNAnd"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Note Java :" />

        <TextView
            android:id="@+id/tvNJava"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Note Arduino :" />

        <TextView
            android:id="@+id/tvNArd"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:gravity="center_vertical"
            android:text="Note T&amp;V :" />

        <TextView
            android:id="@+id/tvNTV"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Note Circuit :" />

        <TextView
            android:id="@+id/tvNC"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:width="1dp"
            android:text="Note Automate :" />

        <TextView
            android:id="@+id/tvNAUT"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:width="1dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supprimer"
            android:layout_gravity="center"
            android:onClick="btnSupprimer"
            android:backgroundTint="#90E91E63"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifier"
            android:layout_gravity="center"
            android:onClick="btnModifier"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#90E91E63"/>

    </LinearLayout>
</LinearLayout>